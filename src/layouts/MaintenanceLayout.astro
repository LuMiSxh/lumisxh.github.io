---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title: string;
  header: string;
}

const { title, header } = Astro.props;
---

<BaseLayout title={title}>
  <div
    class="flex min-h-[calc(100vh-4rem)] bg-[url(/img/abstr-2.png)] bg-cover bg-center"
  >
    <div
      class="flex flex-col justify-center text-center items-center min-h-[calc(100vh-4rem)] bg-black/50 w-screen"
    >
      <h1
        class="text-transparent bg-clip-text bg-gradient-to-l from-lumisxh-error via-lumisxh-accent to-lumisxh-warning font-extrabold text-2xl md:text-3xl p-2"
      >
        {header}
      </h1>
      <slot />
    </div>
  </div>
</BaseLayout>
